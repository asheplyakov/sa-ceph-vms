#cloud-config

chpasswd:
  list: |
    root:r00tme
    ubuntu:ubuntu
  expire: False
ssh_pwauth: True
disable_root: False
ssh_authorized_keys:
 - ssh-rsa  asheplyakov@as-ubuntu
 - ssh-rsa  asheplyakov@alena

bootcmd:
 - echo 'LABEL=MOREVM none swap sw 0 0' >> /etc/fstab
 - swapon -a || true

write_files:
 - path: /etc/hosts
   permissions: '0644'
   content: |
     127.0.0.1 localhost
 - path: /etc/apt/sources.list
   permissions: '0644'
   content: |
     deb http://ru.archive.ubuntu.com/ubuntu @distro_release@ main universe multiverse restricted
     deb http://ru.archive.ubuntu.com/ubuntu @distro_release@-updates  main universe multiverse restricted
     deb http://ru.archive.ubuntu.com/ubuntu @distro_release@-security main universe multiverse restricted
 - path: /etc/apt/sources.list.d/ceph.list
   permissions: '0644'
   content: |
     deb http://asheplyakov.srt.mirantis.net/Public/repos/ceph @ceph_release@-@distro_release@ main universe
     deb-src http://asheplyakov.srt.mirantis.net/Public/repos/ceph @ceph_release@-@distro_release@ main universe
 - path: /etc/apt/preferences.d/ceph.pref
   permissions: '0644'
   content: |
     Package: *
     Pin: release l=sa-@ceph_release@-@distro_release@
     Pin-Priority: 1050
 - path: /etc/apt/apt.conf.d/90_allow_unsigned_repos
   permissions: '0644'
   content: |
     APT::Get::AllowUnauthenticated "1";
 - path: /etc/apt/apt.conf.d/90_use_proxy
   permissions: '0644'
   content: |
     Acquire::http::proxy "http://sahost:3128";
 - path: /etc/opt/ceph.hosts
   permissions: '0644'
   content: |
     saceph-mon
     saceph-mon2
     saceph-mon3
     saceph-osd1
     saceph-osd2
     saceph-osd3
     saceph-rgw

apt_preserve_sources_list: True

runcmd:
 - mkdir -m755 -p /media/work
 - apt-get update
 - apt-get dist-upgrade -y
 - apt-get install -y haveged ceph-deploy nfs-common gdbserver vim-nox mussh
 - "echo 'sahost:/home/asheplyakov/work /media/work nfs rw,tcp,hard,noatime,_netdev 0 0' >> /etc/fstab"
 - dpkg --configure -a
 - "echo ready | nc -w1 sahost 3333"
 - "apt-get purge -y cloud-init && sleep 10 && shutdown -r now"
