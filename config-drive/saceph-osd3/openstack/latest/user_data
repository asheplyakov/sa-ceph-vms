#cloud-config

chpasswd:
  list: |
    root:r00tme
    ubuntu:ubuntu
  expire: False
ssh_pwauth: True
disable_root: False
ssh_authorized_keys:
 - ssh-rsa  asheplyakov@as-ubuntu
 - ssh-rsa  asheplyakov@alena

bootcmd:
 - echo 'LABEL=MOREVM none swap sw 0 0' >> /etc/fstab
 - swapon -a || true
 - echo 'nameserver 192.168.122.1' > /etc/resolv.conf

write_files:
 - path: /etc/hosts
   permissions: '0644'
   content: |
     127.0.0.1 localhost
     10.253.0.1 sahost
     10.253.0.10 saceph-adm.inner
     10.253.0.20 saceph-mon.inner
     10.253.0.22 saceph-mon2.inner
     10.253.0.24 saceph-mon3.inner
     10.253.0.100 saceph-osd1.inner
     10.253.0.102 saceph-osd2.inner
     10.253.0.104 saceph-osd3.inner
     10.253.0.106 saceph-osd4.inner
     10.253.0.108 saceph-osd5.inner
     10.253.0.110 saceph-osd6.inner
     10.253.0.254 saceph-rgw.inner
 - path: /etc/apt/sources.list
   permissions: '0644'
   content: |
     deb http://ru.archive.ubuntu.com/ubuntu trusty main universe multiverse restricted
     deb http://ru.archive.ubuntu.com/ubuntu trusty-updates  main universe multiverse restricted
     deb http://ru.archive.ubuntu.com/ubuntu trusty-security main universe multiverse restricted
 - path: /etc/apt/sources.list.d/ceph-hammer-mos-9.0.list
   permissions: '0644'
   content: |
     deb http://asheplyakov.srt.mirantis.net/Public/repos/ceph-hammer-mos-9.0 trusty main
     deb-src http://asheplyakov.srt.mirantis.net/Public/repos/ceph-hammer-mos-9.0 trusty main
 - path: /etc/apt/preferences.d/ceph-hammer-mos-9.0.pref
   permissions: '0644'
   content: |
     Package: *
     Pin: release o=Mirantis, l=hammer
     Pin-Priority: 1050
 - path: /etc/apt/apt.conf.d/90_allow_unsigned_repos
   permissions: '0644'
   content: |
     APT::Get::AllowUnauthenticated "1";
 - path: /etc/apt/apt.conf.d/90_use_proxy
   permissions: '0644'
   content: |
     Acquire::http::proxy "http://192.168.128.1:3128";
 - path: /etc/network/interfaces.d/eth1.cfg
   permissions: '0644'
   content: |
     auto eth1
     iface eth1 inet manual
     up ip link set up dev eth1
     up ip addr add 10.253.0.104/24 brd 10.253.0.255 dev eth1
     down ip link set down dev eth1
     down ip addr del 10.253.0.104/24 dev eth1

apt_preserve_sources_list: True

runcmd:
 - mkdir -m755 -p /media/work
 - apt-get update
 - apt-get dist-upgrade -y
 - apt-get install -y haveged ceph-deploy nfs-common gdbserver vim-nox
 - "echo '10.253.0.1:/home/asheplyakov/work /media/work nfs rw,tcp,hard,noatime 0 0' >> /etc/fstab"
 - dpkg --configure -a
 - "echo ready | nc -w1 sahost 3333"
 - "apt-get purge -y cloud-init && sleep 10 && shutdown -r now"
